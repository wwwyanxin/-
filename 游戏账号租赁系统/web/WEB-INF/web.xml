    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>com.gamesLease.servlet.UserLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.gamesLease.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserInfoServlet</servlet-name>
        <servlet-class>com.gamesLease.servlet.UserInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LeaseServlet</servlet-name>
        <servlet-class>com.gamesLease.servlet.LeaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RechargeServlet</servlet-name>
        <servlet-class>com.gamesLease.servlet.RechargeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.gamesLease.servlet.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminSeeLeaseServlet</servlet-name>
        <servlet-class>com.gamesLease.servlet.AdminSeeLeaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminSeeOrderServlet</servlet-name>
        <servlet-class>com.gamesLease.servlet.AdminSeeOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminAuditServlet</servlet-name>
        <servlet-class>com.gamesLease.servlet.AdminAuditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RentListServlet</servlet-name>
        <servlet-class>com.gamesLease.servlet.RentListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.gamesLease.servlet.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RentListServlet</servlet-name>
        <url-pattern>/rentList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminAuditServlet</servlet-name>
        <url-pattern>/adminAudit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminSeeOrderServlet</servlet-name>
        <url-pattern>/adminSeeOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminSeeLeaseServlet</servlet-name>
        <url-pattern>/adminSeeLease</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/adminLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RechargeServlet</servlet-name>
        <url-pattern>/recharge</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LeaseServlet</servlet-name>
        <url-pattern>/lease</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserInfoServlet</servlet-name>
        <url-pattern>/userinfo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
